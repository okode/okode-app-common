{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "outDir": "dist"
  },
  "include": [
    "src/**/**.ts",
    "node_modules/cordova-fabric-plugin/typings/*.d.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot"
  }
}
